

div.listview.container {
    /*background-color: #ababab;*/
    display: table;
    width: 100%;
    border-spacing: 0px;
    width: 730px;
}

div.listview.container div.list_header {
    display: table-row;
    background-color: #E5E5E5;
    color: #666666;
}

div.listview.container div.list_header div.list_header_item {
    display: table-cell;
	border-bottom: 1px solid #BBBBBB;
}

div.listview.container div.list_header div.list_header_item.sortable {
    background-color: #dddddd;
}

div.listview.container div.list_header div.list_header_item.active {
	background-color: #CCCCCC;
	background-position: right center;
	background-repeat: no-repeat;
}

div.listview.container div.list_header div.list_header_item.active.asc {
    background-image: url('/kmod/static/img/prototype/table_order_asc.png');
}

div.listview.container div.list_header div.list_header_item.active.desc {
    background-image: url('/kmod/static/img/prototype/table_order_desc.png');
}



div.listview.container div.list_body {
    display: table-row-group;
}

div.listview.container div.list_body div.list_body_row {
    display: table-row;
}

div.listview.container div.list_body div.list_body_row.selection {
    background-color: #e9e9e9;
}




div.listview.container div.list_body div.list_body_row:hover {
    background-color: #e9e9e9;
}

div.listview.container div.list_body div.list_body_item {
    display: table-cell;
	border-bottom:1px solid #DDDDDD;
	color: #666666;
}

div.listview.container div.list_body_row.unpublished div.list_body_item a {
	color: #666666;
}








/* cell styleing: total width: 730px */

/* glogal cell styles */


div.listview.container.s div.list_body_item, div.listview.container.s .list_header_item {
    padding: 2px;
}

div.listview.container.s .c1 {
    width: 24px;
}

div.listview.container.s .c1 img {
    width: 20px;
    height: 20px;
}

div.listview.container div.list_body ul {
    padding-left: 0px !important;
    padding-right: 0px !important;
}

/* styles for releases-table */
div.listview.container.releases.s .c2 {
    width: auto;
}

div.listview.container.releases.s .c3 {
    width: 56px;
}

div.listview.container.releases.s .c4 {
    width: 150px;
}

div.listview.container.releases.s .c5 {
    width: 60px;
}

div.listview.container.releases.s .c6 {
    width: 80px;
}

div.listview.container.releases.s div.list_body_item.c6, div.listview.container.releases.s div.list_body_item.c3 {
    text-align: right;
	padding-right: 24px;
}

div.listview.container.releases.s .c7 {
    width: 80px;
}



/* styles for transmissions-table */
/* name */
div.listview.container.transmissions.s .c2 {
    width: auto;
}

div.listview.container.transmissions.s .c3 {
